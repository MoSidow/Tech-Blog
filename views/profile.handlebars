<div class="row">
  <div class="col-auto">
    <h2 class="heading">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 class="subheading">Add a new Blog:</h3>
    <form class="new-blog-form">
      <div >
        <label>Blog title:</label>
        <input type="text" id="blog-title"/>
      </div>
      <div>
        <label for="blog-desc">Description:</label>
        <textarea id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div>
        <button type="submit">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Your Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>